@model Room


<form method="post" asp-action="CreatePost" enctype="multipart/form-data">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Room</h2>
        </div>

        <div class="row">
            <div class="col-8">

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PriceWorkday"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PriceWorkday" class="form-control" />
                        <span asp-validation-for="PriceWorkday"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PriceWeekends"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PriceWeekends" class="form-control" />
                        <span asp-validation-for="PriceWeekends"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SpotNumber"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="SpotNumber" class="form-control" />
                        <span asp-validation-for="SpotNumber"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Type"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Type" class="form-control" />
                        <span asp-validation-for="Type"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Description" class="form-control"/>
                        <span asp-validation-for="Description"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Image"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Image" class="form-control"/>
                        <span asp-validation-for="Image"></span>
                    </div>
                </div>



                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial.cshtml"/>}
}