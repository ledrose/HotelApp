@model Room

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Room</h2>
        </div>

        <div class="row">
            <div class="col-8">

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PriceWorkday"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PriceWorkday" disabled class="form-control" />
                        <span asp-validation-for="PriceWorkday"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PriceWeekends"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PriceWeekends" disabled class="form-control" />
                        <span asp-validation-for="PriceWeekends"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SpotNumber"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="SpotNumber" disabled class="form-control" />
                        <span asp-validation-for="SpotNumber"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Type"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Type" disabled class="form-control" />
                        <span asp-validation-for="Type"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
